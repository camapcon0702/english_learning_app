<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="20dp"
    android:layout_margin="10dp"
    android:background="@drawable/background_history_topic">
    <TextView
        android:id="@+id/number_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bộ đề 1"
        android:layout_weight="2"
        android:textSize="24sp"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/point_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Điểm : "
        android:textSize="24sp"
        android:layout_weight="1"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tieuDeNgayLamBai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:text="Ngày: "
        app:layout_constraintTop_toBottomOf="@id/point_topic"
        app:layout_constraintStart_toStartOf="@+id/point_topic"
        >

    </TextView>
    <TextView
        android:id="@+id/ngayLamBai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:text="22/12/2022"
        app:layout_constraintTop_toBottomOf="@id/tieuDeNgayLamBai"
        app:layout_constraintStart_toStartOf="@+id/point_topic"
        >

    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>